{
  "manifest_version": 3,
  "name": "GhostText: Cyber Defense",
  "version": "3.0",
  "description": "Advanced DLP Firewall for AI Chatbots. Protects PII, Keys, and Secrets.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
